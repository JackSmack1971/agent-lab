# pytest.ini (Option 1 applied: register custom markers with strict checking)

[pytest]
asyncio_mode = auto
addopts =
    -ra
    --strict-markers
    --cov=agents
    --cov=services
    --cov-report=term-missing
    --cov-report=html
markers =
    unit: Unit tests for individual functions and classes
    integration: marks tests as integration (e2e / multi-component)
    slow: Slow-running tests requiring special handling
    requires_api_key: Tests that require OPENROUTER_API_KEY environment variable
python_files = test_*.py
python_classes = Test*
python_functions = test_*
