{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Architect \u2192 Code (01_plan.json)",
  "type": "object",
  "required": ["feature", "file_plan", "test_strategy"],
  "additionalProperties": false,
  "properties": {
    "feature": { "type": "string", "minLength": 1, "maxLength": 200 },
    "acceptance_criteria": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1
    },
    "file_plan": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "intent", "summary"],
        "additionalProperties": false,
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "intent": { "type": "string", "enum": ["new", "update", "delete"] },
          "summary": { "type": "string", "minLength": 1, "maxLength": 280 }
        }
      }
    },
    "constraints": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "risk_notes": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "test_strategy": {
      "type": "object",
      "required": ["kinds", "coverage"],
      "additionalProperties": false,
      "properties": {
        "kinds": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "enum": ["unit", "property", "integration", "e2e"] }
        },
        "coverage": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    }
  }
}